<!-- views/admin/partials/addProduct.ejs -->

<script type="text/ng-template" id="/addProduct.html">
<!-- Content -->
<form ng-submit="createProduct()">
  <div class="form-group">
    <label for="exampleInputEmail1">Product Name</label>
    <input type="text" ng-model="name" name="nameProduct" class="form-control" id="idProductName" placeholder="Type Product Name" />
  </div>

  <div class="form-group">
    <label for="exampleInputEmail1">Product Price</label>
    <input type="text" ng-model="price"  class="form-control" placeholder="Type Product Price" />
  </div>

  <div class="form-group">
    <label for="exampleInputEmail1">Product Summary</label>
    <input type="text" ng-model="summary" name="summaryProduct" class="form-control" id="idProductSummary" placeholder="Type Product Summary" />
  </div>

  <div class="form-group">
    <label for="exampleInputEmail1">Product Thumb</label>
    <input type="file" ng-model="pathImgFull"  placeholder="Type Path Img Full" />
  </div>

  <div class="form-group">
    <label for="exampleInputEmail1">Product Image</label>
    <input type="file" ng-model="pathImgThumb"  placeholder="Type Path Img Thumb"></input>
  </div>

  <div class="form-group">
    <label for="exampleInputEmail1">Product Description</label>
    <textarea ng-model="description"  class="form-control" placeholder="Type Description"></textarea>
  </div>

  <button type="submit">Create New Product</button>
</form>
</script>
